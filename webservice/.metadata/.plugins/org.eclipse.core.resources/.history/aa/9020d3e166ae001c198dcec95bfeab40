<!ELEMENT bookCatalog (bookList*, bookCategory*)>
<!ELEMENT bookList (books*)>
<!ELEMENT books (book*, ebook*)>
<!ELEMENT book (title, author+, publisher, publishDate, discount, page, category+, revisionDate*, coverImage?, intro?, review*)>
<!ELEMENT ebook (title, author+, publisher, publishDate, discount, page, category+, revisionDate*, coverImage, intro, review*)>

<!ELEMENT title (#PCDATA)>
<!ELEMENT author (#PCDATA)>
<!ELEMENT publisher (#PCDATA)>
<!ELEMENT publishDate (year, month, day)>
<!ELEMENT discount (#PCDATA)>  <!-- 0~80 -->
<!ELEMENT page (#PCDATA)>   <!-- 1~1000 -->
<!ELEMENT category (#PCDATA)>
<!ELEMENT revisionDate (#PCDATA)>
<!ELEMENT coverImage (#PCDATA)>
<!ELEMENT intro (#PCDATA)>
<!ELEMENT review (#PCDATA)>

<!ELEMENT year (#PCDATA)>   <!-- 1900~2021 사이의 값을 가져야함 -->
<!ELEMENT month (#PCDATA)>  <!-- 01~12 -->
<!ELEMENT day (#PCDATA)>   <!-- 01~31 -->

<!ATTLIST book id CDATA #REQUIRED>
<!ATTLIST book categories IDREFS #REQUIRED>
<!ATTLIST price currency (won|dollor|en) "won">
<!ATTLIST coverImage src CDATA #REQUIRED type NOTATION (jpeg|gif) "jpeg">

<!NOTATION jpeg PUBLIC "image/jpeg" "imageViewer.exe">
<!NOTATION gif PUBLIC "image/gif" "photoViewer.exe">

<!--  ELEMENT bookCategory () -->
